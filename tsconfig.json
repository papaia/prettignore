{
  "extends": "@papaia/tsconfig",
  "exclude": ["test", "dist"],
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",

    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
