{
  "name": "prettignore",
  "version": "1.0.4",
  "description": "Prettier but for ignore files",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "bin": {
    "prettignore": "dist/cli.js"
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "ava",
    "build": "rimraf dist && tsc"
  },
  "dependencies": {
    "globby": "^11.0.1",
    "minimist": "^1.2.5",
    "outdent": "^0.8.0",
    "time-span": "^4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@papaia/prettier": "^2.0.1",
    "@types/node": "^14.14.17",
    "ava": "^3.14.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "micromatch": "^4.0.2",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/papaia/prettignore.git"
  },
  "keywords": [
    "ignore",
    "format",
    "gitignore"
  ],
  "author": "Papaia",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/papaia/prettignore/issues"
  },
  "homepage": "https://github.com/papaia/prettignore#readme",
  "prettier": "@papaia/prettier",
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --concurrent false --config lint-staged.config.js",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
